<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:id="@+id/padding" android:padding="10pt">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editshownumber" android:layout_weight="1" android:paddingTop="25pt"
            android:background="@color/yellowish" android:text="0"
            android:textColor="@color/white" android:gravity="right|fill_vertical"
            android:textSize="36sp" tools:textSize="36sp"/>
    <TableLayout
            android:layout_width="367dp"
            android:layout_height="123dp" android:layout_weight="1"
    >

        <TableRow android:layout_width="294dp" android:layout_height="match_parent" >
            <Button
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buAC" android:background="@color/white_bag"
                    android:textSize="24sp" android:layout_weight="1"
                    android:onClick="buclearevent" android:linksClickable="false"/>
            <Button
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buplusminus" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bupercent" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="bupercent"/>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/budivide" android:background="@color/yellow"
                    android:textColor="@color/white" android:textSize="24sp" android:text="\u00F7"
                    android:layout_weight="1" android:onClick="buopevent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" >
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu7" android:textSize="24sp"
                    android:layout_weight="1" android:textAllCaps="false" android:background="@color/white_bag"
                    android:onClick="buNumberEvent"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu8" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu9" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="x"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bumul" android:background="@color/yellow"
                    android:textColor="@color/white" android:textSize="24sp" android:layout_weight="1"
                    android:onClick="buopevent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" >
            <Button
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu4" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu5" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu6" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt" android:id="@+id/buminus" android:background="@color/yellow"
                    android:textColor="@color/white" android:textSize="24sp" android:layout_weight="1"
                    android:onClick="buopevent"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu1" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu2" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu3" android:textSize="24sp"
                    android:layout_weight="1" android:background="@color/white_bag" android:onClick="buNumberEvent"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buplus" android:background="@color/yellow"
                    android:textColor="@color/white" android:textSize="24sp" android:layout_weight="1"
                    android:onClick="buopevent"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="0     "
                    android:layout_width="60pt"
                    android:layout_height="match_parent" android:id="@+id/bu0" android:layout_weight="1"
                    android:background="@color/white_bag" android:textSize="24sp"/>
            <Button
                    android:text="      ."
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buDot" android:layout_weight="1"
                    android:background="@color/white_bag" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="="
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buequals" android:layout_weight="0.62"
                    android:background="@color/yellow" android:textSize="24sp" android:textColor="@color/white"
                    android:onClick="buequalevent" />
        </TableRow>
    </TableLayout>
</LinearLayout>